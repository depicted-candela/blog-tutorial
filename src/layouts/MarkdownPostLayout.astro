---
import '../styles/posts.css';
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
const tags = frontmatter.tags;
const url = frontmatter.url;
const allPosts = await Astro.glob('../pages/posts/*.md');
let filteredPosts = allPosts.filter((post) => post.frontmatter.tags.some((e: string) => tags.includes(e)));
filteredPosts = filteredPosts.filter((post) => post.url != url);
---
<BaseLayout pageTitle={frontmatter.title}>
    <p>Written by {frontmatter.author}</p>
    <div class="image-container">
        <img src={frontmatter.image.url} alt={frontmatter.image.alt}>
        <div class="text-overlay">
            <p>Published on: {frontmatter.pubDate.toString().slice(0, 10)}</p>
            <p>{frontmatter.description}</p>
        </div>
    </div>
    <div class="tags">
        {filteredPosts.map((post) => <p class="tag"><a href={post.url}>{post.frontmatter.title}</a></p>)}
    </div>
    <slot />
</BaseLayout>